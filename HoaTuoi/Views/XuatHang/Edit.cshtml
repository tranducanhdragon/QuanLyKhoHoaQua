@model HoaTuoi.Models.EF.PhieuXuatHang
@{
    ViewBag.Title = "Edit";
}
<style>
    .text-box {
        margin: 10px 0 0 0;
        width: 50px;
    }

    #id_loai {
        width: 100%;
        height: 30px;
    }

    #so_luong {
        width: 100%;
        height: 30px;
    }
</style>
<div class="main-body">
    Sửa phiếu:
    <div class="feed">
        <div class="feedback" style="display: block; margin-bottom: 20px; padding: 0px 0px 80px 0px;">
            @using (Html.BeginForm("Edit", "XuatHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div>
                    <hr />
                    Tên Loại: @Model.ten_loai
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div>
                        Ngày Xuất:
                        <div>
                            @Html.TextBoxFor(model => model.ngay_xuat, new { @Value = @DateTime.Now.ToShortDateString() })
                            @Html.ValidationMessageFor(model => model.ngay_xuat, "", new { @class = "text-danger" })
                        </div>

                        @*Số Lượng:
                            <div>
                                @Html.EditorFor(model => model.so_luong, new { htmlAttributes = new { @type = "number", @min = "0", @step = "5", @value = "0" } })
                                @Html.ValidationMessageFor(model => model.so_luong, "", new { @class = "text-danger" })
                            </div>*@
                    </div>
                    <div>
                        ID Cửa Hàng:
                        <div>
                            @Html.TextBoxFor(model => model.id_cua_hang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.id_cua_hang, "", new { @class = "text-danger" })
                        </div>
                        @*Giá Xuất:
                            <div>
                                @Html.TextBoxFor(model => model.gia_xuat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.gia_xuat, "", new { @class = "text-danger" })
                            </div>*@
                    </div>
                    <div>
                        <input type="submit" value="Sửa" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>

</div>

