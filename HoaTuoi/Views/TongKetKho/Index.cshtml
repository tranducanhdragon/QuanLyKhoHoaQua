@model List<HoaTuoi.Models.EF.TongKetKho> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
        width: 350%;
        margin-left: 25px;
    }
    h1 {
        margin-left: 30px;
    }
    table, th, td {
        border: 1px solid black;
        align-content: center;
    }

    th {
        height: 50px;
    }
</style>
<div class="feed">
    <div class="feedback"  style="display:block; margin-bottom: 20px; padding: 0px 0px 80px 0px;">
        <h1>Danh Sách Loại Quả</h1>
        <table>
            <thead>
                <tr>
                    <th>ID Loại</th>
                    <th>Tên Loại</th>
                    <th>Số Lượng( Quả)</th>
                    <th>Giá Nhập( VNĐ)</th>
                    <th>Ngày Nhập</th>
                    <th>Đọng Vốn( VNĐ)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id_loai</td>
                        <td>@item.ten_loai</td>
                        <td>@item.tong_so_luong</td>
                        <td>@item.gia_nhap</td>
                        <td>@item.ngay_nhap</td>
                        <td>@item.tong_tien</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="clear"></div>

</div>